{% extends "base.html.twig" %}

{% block title %}
    Home - {{ parent() }}
{% endblock %}

{% block body %}
    <section id="tricks" class="container-fluid">
        <div class="row">
            <div id="media-index" class="col-md-12">
                <div class="col-md-12">
                    <div class="row">
                        {% if tricks is empty %}
                            <i style="font-size:1.8em">Aucune figure disponible</i>
                            <hr>
                        {% endif %}

                        {% include 'Trick/listTricks.html.twig' with {'tricks':tricks } %}

                        {% if nbTricksMax > limit %}
                        <div class="col-lg-12 text-center form-group margin-top">
                            <a class="btn btn-primary btn-more-tricks"
                               data-href="{{ path("list_tricks") }}">
                                Afficher plus
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    </section>
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <div class="container-fluid btn-add-trick">
            <div class="col-md-12 form-group">
                <a href="{{ path('trick_add') }}" class="btn btn-default">
                    Ajouter une figure
                </a>
            </div>
        </div>
    {% endif %}
    {% if tricks|length > 15 %}
        <div class="text-right">
            <a href="#tricks" class="page-scroll">
                <span id="back-top" class="fa fa-arrow-up fa-3x"></span>
            </a>
        </div>
    {% endif %}
    <div class="text-right">
        <a href="#tricks" id="back-top" class="page-scroll">
            <span class="fa fa-arrow-up fa-3x"></span>
        </a>
    </div>
{% endblock %}